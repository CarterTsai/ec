{{block login()}}
<form action="/login" method="post">
    <div class="input-box">
        <input class="u-full-width" type="email" placeholder="Email"/>
    </div>
    <div class="input-box">
        <input class="u-full-width" type="password" placeholder="Password">
    </div>
    <label class="flex-middle"><input type="checkbox"/>remember me</label>
    <div class="flex-middle">
        <input class="button-primary" type="submit" value="Sign Up Now"/>
    </div>
</form>
{{end}}
